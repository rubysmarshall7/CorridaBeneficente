<Window x:Class="CorridaBeneficente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Corrida Beneficente – Gerenciamento de Inscrições"
        Height="520" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Formulário -->
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <TextBlock Text="Dados do Participante" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

            <TextBlock Text="Nome"/>
            <TextBox x:Name="TxtNome" Margin="0,0,0,8"/>

            <TextBlock Text="CPF"/>
            <TextBox x:Name="TxtCPF" Margin="0,0,0,8"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="TxtEmail" Margin="0,0,0,8"/>

            <TextBlock Text="Telefone"/>
            <TextBox x:Name="TxtTelefone" Margin="0,0,0,16"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <Button Content="Cadastrar" Width="120" Click="BtnCadastrar_Click" Margin="0,0,8,0"/>
                <Button Content="Limpar" Width="100" Click="BtnLimpar_Click"/>
            </StackPanel>

            <Separator/>

            <TextBlock Text="Estatísticas" FontWeight="Bold" FontSize="16" Margin="0,12,0,8"/>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total de participantes: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtTotal"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total arrecadado: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtArrecadado"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Data da Corrida: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtDataCorrida"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Lista -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="GridParticipantes" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nº" Binding="{Binding NumeroInscricao}" Width="50"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="140"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="120"/>
                    <DataGridTextColumn Header="Valor (R$)" Binding="{Binding ValorInscricao, StringFormat=F2}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Grid.Row="1" Content="Remover Selecionado" HorizontalAlignment="Right" Width="180"
                    Click="BtnRemover_Click"/>
        </Grid>
    </Grid>
</Window>
